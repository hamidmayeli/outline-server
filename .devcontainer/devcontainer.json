{
  "name": "Outline Server",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-18-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.21"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "ms-vscode.eslint",
        "golang.go",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "task.vscode-task",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "typescript.preferences.defaultQuoteStyle": "single",
        "editor.formatOnSave": true,
        "eslint.workingDirectories": ["src/shadowbox", "src/metrics_server", "src/sentry_webhook"],
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  },

  "containerEnv": {
    "NODE_ENV": "development"
  },

  "mounts": [
    "source=outline-server-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=outline-server-go-pkg,target=/go/pkg,type=volume"
  ],

  "forwardPorts": [3000, 8080, 8081, 9090],

  "portsAttributes": {
    "3000": {
      "label": "Shadowbox Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Metrics Server",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Sentry Webhook",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": ".devcontainer/post-create.sh",

  "onCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder} /go 2>/dev/null || true",

  "remoteUser": "vscode",

  "workspaceFolder": "/workspaces/outline-server"
}
